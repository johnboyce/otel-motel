# Pipeline Control Configuration
# These environment variables control which logging pipelines are enabled
# Set to 'false' to disable a specific pipeline

# Pipeline 1: Quarkus → OTEL Collector → Elasticsearch
# Index: otel-motel-otel-direct-logs-*
LOGGING_PIPELINE_OTEL_DIRECT_ENABLED=true

# Pipeline 2: Quarkus → GELF → Vector → Elasticsearch  
# Index: otel-motel-gelf-logs-*
LOGGING_PIPELINE_GELF_VECTOR_ENABLED=true

# Pipeline 3: Quarkus → OTEL Collector → Vector → Elasticsearch
# Index: otel-motel-otel-vector-logs-*
LOGGING_PIPELINE_OTEL_VECTOR_ENABLED=true

# Example: Disable GELF pipeline
# LOGGING_PIPELINE_GELF_VECTOR_ENABLED=false

# Example: Enable only OTEL direct pipeline
# LOGGING_PIPELINE_OTEL_DIRECT_ENABLED=true
# LOGGING_PIPELINE_GELF_VECTOR_ENABLED=false
# LOGGING_PIPELINE_OTEL_VECTOR_ENABLED=false
