meta {
  name: Get Customer by Email
  type: http
  seq: 1
}

post {
  url: http://localhost:8080/graphql
  body: graphql
  auth: none
}

body:graphql {
  query {
    customerByEmail(email: "john.doe@example.com") {
      id
      firstName
      lastName
      email
      phone
      address
      bookings {
        id
        checkInDate
        checkOutDate
        status
        room {
          roomNumber
          hotel {
            name
          }
        }
      }
    }
  }
}
