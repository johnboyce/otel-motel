meta {
  name: Get Hotels by City
  type: graphql
  seq: 3
}

post {
  url: {{graphql_url}}
  body: graphql
  auth: inherit
}

body:graphql {
  query {
    hotelsByCity(city: "Miami Beach") {
      id
      name
      address
      city
      country
      starRating
    }
  }
}

docs {
  # Get Hotels by City
  
  This query is public and does not require authentication.
  Change the city parameter to search for hotels in different cities.
}
