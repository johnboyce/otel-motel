{
  "index_patterns": ["otel-motel-metrics-*"],
  "priority": 500,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "30s"
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "service": {
          "properties": {
            "name": { "type": "keyword" }
          }
        },
        "metric": {
          "properties": {
            "name": { "type": "keyword" },
            "value": { "type": "double" }
          }
        }
      }
    }
  }
}
